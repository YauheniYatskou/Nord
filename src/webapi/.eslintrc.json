{
    "parser": "@babel/eslint-parser",
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        },
        "requireConfigFile": false
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-duplicate-imports": ["error"],
        "no-trailing-spaces": ["error"]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js"]
            }
        },
        "import/parsers": {
            "@babel/eslint-parser": [".js"]
        },
        "import/core-modules": ["node"]
    }
}
